<div class="row">
  <div class="col-md-4 margin-top">
    <div class="col-md-12">
      <!--Panel-->
      <div class="card">
        <h3 class="card-header" align="center"><%= @user.name %></h3>
        <div class="card-block">
          <div class="thumbnail" align="center">
            <%= image_tag avatar_url(@user), class: "avatar-full" %>
          </div>
          <div class="offerinfo" align="center">
            <br>
            <p><%= @user.email %></p>
            <% if current_user != @user %>
              <hr>
              <%= link_to "Send Message", conversations_path(sender_id: current_user.id, recipient_id: @user.id), method: 'post', class: "btn btn-primary" %>
            <% end %>
          </div>

        </div>
      </div>
    </div>
  </div>
  <div class="col-md-8 margin-top">
    <div class="card">
      <h3 class="card-header" align="center"><%= "#{@user.name}'s Tasks" %> (<%= @tasks.length %>)</h3>
      <div class="card-block">
        <div class="row">
          <% @tasks.each do |task| %>
              <div class="col-md-4">
                <div class="panel panel-default">
                  <div class="panel-heading preview">
                    <%= image_tag task.image.url, class: "avatar-small" %>
                  </div>
                  <div class="panel-body">
                    <%= link_to task.name, task %>
                  </div>
                </div>
              </div>
          <% end %>
        </div>
    </div>
  </div>
</div>