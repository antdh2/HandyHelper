<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
    <div class="col-md-6 col-md-offset-2 margin-top">
  <!--Panel-->
  <div class="card">
    <h3 class="card-header" align="center">Sign Up</h3>
    <div class="card-block">
      <div class="md-form form-group">
        <i class="fa fa-user prefix"></i>
        <%= f.text_field :name, autofocus: true, id: 'name', class: "form-control validate" %>
        <%= f.label "Type your full name", for: 'name', 'data-error' => 'wrong', 'data-success' => 'right' %><br />
      </div>

      <div class="md-form form-group">
        <i class="fa fa-envelope prefix"></i>
        <%= f.email_field :email, id: 'email', class: "form-control validate" %>
        <%= f.label "Type your email", for: 'email', 'data-error' => 'wrong', 'data-success' => 'right' %><br />
      </div>

      <div class="md-form form-group">
        <i class="fa fa-lock prefix"></i>
        <%= f.password_field :password, autocomplete: "off", id: 'password', class: 'form-control validate' %>
        <% if @minimum_password_length %>
            <small>(<%= @minimum_password_length %> characters minimum)</small>
        <% end %><br />
        <%= f.label "Type your password", for: 'password', 'data-error' => 'wrong', 'data-success' => 'right' %><br />
      </div>


      <div class="md-form form-group">
        <i class="fa fa-lock prefix"></i>
        <%= f.password_field :password_confirmation, autocomplete: "off", id: 'password_confirmation', class: 'form-control validate' %>
        <%= f.label "Type your password", for: 'password_confirmation', 'data-error' => 'wrong', 'data-success' => 'right' %><br />
      </div>

      <div class="actions">
        <%= f.button "Sign Up", class: 'btn btn-primary btn-lg' %>
      </div>
    </div>
  </div>
  <!--/.Panel-->
</div>


<% end %>

<%= render "devise/shared/links" %>



