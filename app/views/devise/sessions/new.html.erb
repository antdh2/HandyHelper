<h2>Log in</h2>

<hr>
<br>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="md-form form-group">
    <i class="fa fa-envelope prefix"></i>
    <%= f.email_field :email, autofocus: true, id: 'email', class: "form-control validate" %>
    <%= f.label "Type your email", for: 'email', 'data-error' => 'wrong', 'data-success' => 'right' %><br />
  </div>

  <div class="md-form form-group">
      <i class="fa fa-lock prefix"></i>
      <%= f.password_field :password, autocomplete: "off", id: 'password', class: 'form-control validate' %>
      <%= f.label "Type your password", for: 'password', 'data-error' => 'wrong', 'data-success' => 'right' %><br />
  </div>

  <% if devise_mapping.rememberable? -%>
        <div class="md-form form-group">
      <%= f.check_box :remember_me, id: 'remember_me_checkbox' %>
      <%= f.label "Remember Me", for: 'remember_me_checkbox' %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.button "Log in", class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
