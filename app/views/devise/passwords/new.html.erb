<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

    <div class="md-form form-group">
      <i class="fa fa-envelope prefix"></i>
      <%= f.email_field :email, autofocus: true, id: 'email', class: "form-control validate" %>
      <%= f.label "Type your email", for: 'email', 'data-error' => 'wrong', 'data-success' => 'right' %><br />
    </div>

    <div class="actions">
      <%= f.button "Send me reset password instructions", class: 'btn btn-primary btn-lg' %>
    </div>

<% end %>

<%= render "devise/shared/links" %>
